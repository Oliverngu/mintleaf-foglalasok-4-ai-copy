rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        // Accept any non-false admin custom claim (bool/number/string) or admin role label
        (request.auth.token.admin != null && request.auth.token.admin != false &&
          request.auth.token.admin != 'false' && request.auth.token.admin != 0 &&
          request.auth.token.admin != '0') ||
        request.auth.token.role == 'Admin' ||
        request.auth.token.role == 'admin'
      );
    }

    function hasUnit(unitId) {
      return isSignedIn()
        && unitId != null
        && ((request.auth.token.unitIds != null && unitId in request.auth.token.unitIds)
          || (request.auth.token.unitIDs != null && unitId in request.auth.token.unitIDs)
          || (request.auth.token.unitPermissions != null && request.auth.token.unitPermissions[unitId] != null)
          || (request.auth.token.permissions != null && request.auth.token.permissions[unitId] != null));
    }

    function canManageUnitTheme(unitId) {
      return isAdmin()
        || (isSignedIn()
          && (request.auth.token.role == 'Unit Admin'
            || request.auth.token.unitAdmin == true
            || (request.auth.token.unitPermissions != null && request.auth.token.unitPermissions[unitId] != null)
            || (request.auth.token.permissions != null && request.auth.token.permissions[unitId] != null))
          && hasUnit(unitId));
    }

    function canManageKnowledgeBase(unitId) {
      return isSignedIn() && (
        isAdmin() ||
        request.auth.token.canManageKnowledgeBase == true ||
        request.auth.token.canManageKnowledgeCategories == true ||
        (request.auth.token.unitPermissions != null &&
          request.auth.token.unitPermissions[unitId].canManageKnowledgeBase == true) ||
        (request.auth.token.unitPermissions != null &&
          request.auth.token.unitPermissions[unitId].canManageKnowledgeCategories == true) ||
        (request.auth.token.permissions != null &&
          request.auth.token.permissions[unitId].canManageKnowledgeBase == true) ||
        (request.auth.token.permissions != null &&
          request.auth.token.permissions[unitId].canManageKnowledgeCategories == true)
      );
    }

    // Tudástár: Storage objects per unit
    match /units/{unitId}/knowledge_base/{allPaths=**} {
      allow read, write: if canManageKnowledgeBase(unitId);
    }

    match /units/{unitId}/themes/{allPaths=**} {
      allow read: if isSignedIn();
      allow write, delete: if canManageUnitTheme(unitId);
    }

    match /units/{unitId}/ui_themes/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin() || canManageUnitTheme(unitId);
    }

    // Legacy path compatibility for UI themes (singular)
    match /units/{unitId}/ui_theme/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin() || canManageUnitTheme(unitId);
    }
  }
}
