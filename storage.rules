rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function truthyFlag(flag) {
      return flag == true
        || flag == 'true'
        || flag == 'TRUE'
        || flag == 'True'
        || flag == 1
        || flag == '1'
        || flag == 'yes'
        || flag == 'YES'
        || flag == 'Yes'
        || flag == 'on'
        || flag == 'ON';
    }

    function hasUnitPermission(unitId, permissionKey) {
      return (request.auth.token.unitPermissions != null
          && request.auth.token.unitPermissions[unitId] != null
          && truthyFlag(request.auth.token.unitPermissions[unitId][permissionKey]))
        || (request.auth.token.permissions != null
          && request.auth.token.permissions[unitId] != null
          && truthyFlag(request.auth.token.permissions[unitId][permissionKey]));
    }

    function isAdmin() {
      return isSignedIn() && (
        // Accept common admin boolean/string claim names
        truthyFlag(request.auth.token.admin) ||
        truthyFlag(request.auth.token.isAdmin) ||
        truthyFlag(request.auth.token.is_admin) ||
        truthyFlag(request.auth.token.isadmin) ||
        // Accept string role labels (single value or array)
        request.auth.token.role == 'Admin' || request.auth.token.role == 'admin' || request.auth.token.role == 'ADMIN' ||
        (request.auth.token.roles != null && (
          'Admin' in request.auth.token.roles ||
          'admin' in request.auth.token.roles ||
          'ADMIN' in request.auth.token.roles
        ))
      );
    }

    function hasUnit(unitId) {
      return isSignedIn()
        && unitId != null
        && ((request.auth.token.unitIds != null && unitId in request.auth.token.unitIds)
          || (request.auth.token.unitIDs != null && unitId in request.auth.token.unitIDs)
          || (request.auth.token.unitPermissions != null && request.auth.token.unitPermissions[unitId] != null)
          || (request.auth.token.permissions != null && request.auth.token.permissions[unitId] != null));
    }

    function canManageUnitTheme(unitId) {
      return isAdmin()
        || (isSignedIn()
          && (request.auth.token.role == 'Unit Admin'
            || request.auth.token.unitAdmin == true
            || (request.auth.token.unitPermissions != null && request.auth.token.unitPermissions[unitId] != null)
            || (request.auth.token.permissions != null && request.auth.token.permissions[unitId] != null))
          && hasUnit(unitId));
    }

    function canManageKnowledgeBase(unitId) {
      return isSignedIn() && (
        isAdmin()
        || truthyFlag(request.auth.token.canManageKnowledgeBase)
        || truthyFlag(request.auth.token.canManageKnowledgeCategories)
        || hasUnitPermission(unitId, 'canManageKnowledgeBase')
        || hasUnitPermission(unitId, 'canManageKnowledgeCategories')
      );
    }

    // Tudástár: Storage objects per unit
    match /units/{unitId}/knowledge_base/{allPaths=**} {
      allow read, write: if canManageKnowledgeBase(unitId);
    }

    match /units/{unitId}/themes/{allPaths=**} {
      allow read: if isSignedIn();
      allow write, delete: if canManageUnitTheme(unitId);
    }

    match /units/{unitId}/ui_themes/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin() || canManageUnitTheme(unitId);
    }

    // Legacy path compatibility for UI themes (singular)
    match /units/{unitId}/ui_theme/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin() || canManageUnitTheme(unitId);
    }
  }
}
