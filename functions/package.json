{
  "name": "mintleaf-functions",
  "version": "1.0.0",
  "private": true,
  "main": "lib/index.js",
  "type": "commonjs",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "capacity:cleanup:dry": "npm exec -- tsx src/scripts/capacityCleanupRunner.ts --dry-run",
    "capacity:cleanup:apply": "npm exec -- tsx src/scripts/capacityCleanupRunner.ts --apply --yes",
    "capacity:sanity:scan": "npm exec -- tsx src/scripts/capacitySanityScan.ts",
    "gate:reservations": "npm run test:unit && npm run smoke:reservations:buildrun",
    "smoke:reservations": "node lib/smoke/reservations.smoke.js",
    "smoke:reservations:buildrun": "npm run build && node lib/smoke/reservations.smoke.js",
    "test:unit": "node src/scripts/unitTestRunner.mjs",
    "test:contract": "node src/scripts/testContractRunner.mjs"
  },
  "dependencies": {
    "firebase-admin": "^12.5.0",
    "firebase-functions": "^6.2.0"
  },
  "devDependencies": {
    "tsx": "^4.19.2",
    "typescript": "^5.8.2"
  }
}
