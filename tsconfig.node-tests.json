{
  "compilerOptions": {
    "outDir": "dist-node-tests",
    "rootDir": ".",
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "declaration": false,
    "noEmitOnError": true
  },
  "include": [
    "src/**/__node_tests__/**/*.test.ts",
    "src/core/scheduling/**/*.ts"
  ],
  "exclude": [
    "src/**/__tests__/**",
    "src/core/scheduling/tests/**/*.test.ts",
    "node_modules",
    "dist",
    "dist-node-tests"
  ]
}
